      <div class="col-xs-12">
          <button type="submit" class="btn btn-primary pull-right">Salvar e ir para o pr√≥ximo</button>
          <a href="<%= user_step_path @current_user.id, 1 %>" class="btn btn-primary pull-left">Anterior</a>
