<div class="container">
	<div class="row" style="margin-top: 100px;">
		<div class="col-xs-4 col-xs-offset-4">

			<div class="panel panel-default">

				<div class="panel-heading text-center">
					<strong >Entrar</strong>
				</div>

				<div class="panel-heading text-right">
					<a href="<%=  new_user_path%>" class=""> Crie sua conta</a>
				</div>

				<div class="panel-body">

					<%= form_tag sessions_path %>

					<%= hidden_field_tag 'return_to', params[:return_to] %>
						<fieldset>
							<div class="row">
								<div class="col-xs-12 ">

									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">@</span>
											<%= text_field_tag :email, params[:email], class: 'form-control' %>
										</div>
									</div>

									<div class="form-group">
										<div class="input-group">
											<span class="input-group-addon">#</span>
											<%= password_field_tag :password, params[:password], class: 'form-control' %>
										</div>
									</div>

									<div class="form-group">
										<input type="submit" class="btn btn-lg btn-primary btn-block" value="Acessar">
									</div>

								</div>
							</div>
						</fieldset>
					</form>

				</div>

				<div class="panel-footer ">
					<a href="<%=  recovery_pass_path%>" class=""> Esqueci minha senha </a>
				</div>

	    </div>

		</div>
	</div>
</div>