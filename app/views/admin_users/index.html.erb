<div class="container">

	<div class="row">
		<div class="col-xs-12">
			<h1>Usuários</h1>
		</div>
	</div>

	<div class="row">
		<% if @current_user.profile_id == 1%>
			<div class="col-xs-12">
					<a class="btn btn-primary pull-right" href="<%= new_user_path %>" role="button">
						Novo Usuário
					</a>
			</div>
		<%end%>
		<div class="col-xs-12">
			<%= datagrid_form_for @grid, :method => :get, :url => admin_users_path %>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<%= datagrid_table @grid %>
			<%= paginate(@grid.assets) %>
		</div>
	</div>

</div>